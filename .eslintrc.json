{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true,
        "node" : true

    },
    "extends": "eslint:recommended",
    "parserOptions": {

        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-control-regex": "off"
    }
}
